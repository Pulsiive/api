    "url": "https://github.com/Pulsiive/api/issues"
  },
  "homepage": "https://github.com/Pulsiive/api#readme",
  "dependencies": {
    "@prisma/client": "^4.4.0",
    "@types/validatorjs": "^3.15.0",
    "axios": "^1.1.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "facebook-ts": "^0.2.3",
    "handlebars": "^4.7.7",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.3",
    "node-fetch": "^3.2.10",
    "nodemailer": "^6.7.5",
